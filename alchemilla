<script>
tippy('[title]', {
    role: 'tooltip',
    theme: 'croissant',
    arrow: false,
    placement: 'bottom',
 
    content(reference) {
    const title = reference.getAttribute('title');
    reference.removeAttribute('title');
    return title;
    },
});
</script>
